@model Hospitalproject.Models.ViewModels.UpdateHomeRemedy
@{
    ViewBag.Title = "Update Home Remedy";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>Edit Details for @Model.HomeRemedies.HomeRemedies_title</h2>
    <a href="/HomeRemedies/List">Back to List</a>
    <div>
        <form method="post" action="/HomeRemedies/Update/@Model.HomeRemedies.HomeRemedies_id">
            <div>
                <label for="HomeRemedies_title">Title:</label>
                <input type="text" name="HomeRemedies_title" id="HomeRemedies_title" value="@Model.HomeRemedies.HomeRemedies_title" />
            </div>
            <div>
                <label for="HomeRemedies_desc">Description:</label>
                <input type="text" name="HomeRemedies_desc" id="HomeRemedies_desc" value="@Model.HomeRemedies.HomeRemedies_desc" />
            </div>
            <div>
                <label for="RemedySource_id">Remedy Source:</label>
                <select id="RemedySource_id" name="RemedySource_id">
                    
                    @{
                        foreach (var remedySource in Model.RemedySources)
                        {
                            var selected = "";
                            if (Model.HomeRemedies.RemedySource_id == remedySource.RemedySource_id)
                            {
                                selected = "selected";
                            }
                            <option value="@remedySource.RemedySource_id" @selected>@remedySource.RemedySource_name</option>
                        }
                    }

                </select>
            </div>

            <div class="controls">
                <input type="submit" value="Update" />
            </div>
        </form>

    </div>
</body>
</html>
