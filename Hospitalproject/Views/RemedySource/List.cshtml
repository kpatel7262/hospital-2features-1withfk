@model List<Hospitalproject.Models.RemedySource>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>List of Remedy Sources</h2>
    <a href="/RemedySource/New">Add Remedy Source</a>
    <div class="paginate">
        @{
            <a href="/RemedySource/List?pagenum=@((int)ViewData["pagenum"]-1)&remedysrcsearchkey=@ViewData["remedysrcsearchkey"]">Prev</a>
            @ViewData["pagesummary"]
            <a href="/RemedySource/List?pagenum=@((int)ViewData["pagenum"]+1)&remedysrcsearchkey=@ViewData["remedysrcsearchkey"]">Next</a>
        }
    </div>
    <form action="/RemedySource/List" method="GET">
        <input type="text" name="remedysrcsearchkey" id="remedysrcsearchkey" />
        <input type="submit" value="Search" />
    </form>
    <div class="col-lg-12">
        @{
            foreach (var remedysrc in Model)
            {
                <div class="col-md-4">
                    <h3><a href="/RemedySource/View/@remedysrc.RemedySource_id">@remedysrc.RemedySource_name</a></h3>
                    <p><a href="@remedysrc.RemedySource_url">@remedysrc.RemedySource_url</a></p>

                    <p>
                        <a href="/RemedySource/Update/@remedysrc.RemedySource_id" class="btn btn-default" type="button">Update</a>
                        <a href="/RemedySource/Delete/@remedysrc.RemedySource_id" class="btn btn-default" type="button">Delete</a>
                    </p>
                </div>

            }

        }

    </div>
</body>
</html>